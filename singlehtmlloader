<script>
document.getElementById('aboutBlankButton').addEventListener('click', function() {
  const newTab = window.open('about:blank', '_blank'); // Open a blank tab

  // Copy your current document's HTML into the new tab
  newTab.document.write(`
    <html>
      <head>
        <title>Your Website</title>
        <style>
          ${Array.from(document.styleSheets)
            .map(sheet => {
              try { return Array.from(sheet.cssRules).map(rule => rule.cssText).join(' '); } 
              catch(e){ return ''; }
            }).join(' ')}
        </style>
      </head>
      <body>
        ${document.body.innerHTML}
      </body>
    </html>
  `);
  newTab.document.close();
});
</script>

