// ================== MUTE / UNMUTE BUTTON ==================
function toggleMute(targetUsername) {
  const currentUser = localStorage.getItem('username');
  if (!SPECIAL_USERS.includes(currentUser?.toLowerCase())) return; // Only Sunibun can mute/unmute

  let mutedUsers = window.config?.mutedUsers || [];

  if (mutedUsers.includes(targetUsername)) {
    // UNMUTE
    mutedUsers = mutedUsers.filter(u => u !== targetUsername);
    database.ref('config/mutedUsers').set(mutedUsers);
    alert(`${targetUsername} has been unmuted.`);
  } else {
    // MUTE
    mutedUsers.push(targetUsername);
    database.ref('config/mutedUsers').set(mutedUsers);
    alert(`${targetUsername} has been muted.`);
  }
}

// ================== RENDER MESSAGES WITH BUTTON ==================
function renderMessages(messages) {
  const container = document.getElementById('chatMessages');
  const currentUser = localStorage.getItem('username');
  container.innerHTML = '';

  Object.entries(messages || {})
    .sort((a, b) => (a[1]?.timestamp || 0) - (b[1]?.timestamp || 0))
    .forEach(([id, msg]) => {
      if (!msg || !msg.user || !msg.text) return;

      const div = document.createElement('div');
      div.className = `chat-message${msg.user === currentUser ? ' own' : ''}`;

      // Sunibun highlight
      if (SPECIAL_USERS.includes(msg.user.toLowerCase())) div.classList.add('sunibun');

      // Message content
      div.innerHTML = `
        <div class="chat-message-user">
          ${msg.user} ‚Ä¢ ${new Date(msg.timestamp).toLocaleTimeString()}
          ${SPECIAL_USERS.includes(currentUser?.toLowerCase()) && msg.user !== currentUser 
            ? `<button class="mute-btn" onclick="toggleMute('${msg.user}')">
                 ${window.config?.mutedUsers?.includes(msg.user) ? 'Unmute' : 'Mute'}
               </button>` 
            : ''}
        </div>
        <div class="chat-message-text">${msg.text}</div>
      `;

      container.appendChild(div);
    });

  container.scrollTop = container.scrollHeight;
}

function muteUser(username) {
  let mutedUsers = window.config?.mutedUsers || [];
  if (!mutedUsers.includes(username)) {
    mutedUsers.push(username);
    database.ref('config/mutedUsers').set(mutedUsers);
  }
}

function unmuteUser(username) {
  let mutedUsers = window.config?.mutedUsers || [];
  mutedUsers = mutedUsers.filter(u => u !== username);
  database.ref('config/mutedUsers').set(mutedUsers);
}


// ========== LOADING SCREEN ==========
let loadingStart = Date.now();
let loadingInterval;

function startLoading() {
  const bar = document.getElementById('loadingBar');
  const skipBtn = document.getElementById('skipBtn');
  let progress = 0;
  const deviceSpeed = navigator.hardwareConcurrency || 4;
  const loadTime = Math.max(10000, 15000 - (deviceSpeed * 500));

  loadingInterval = setInterval(() => {
    progress += 100 / (loadTime / 100);
    bar.style.width = Math.min(progress, 100) + '%';

    if (Date.now() - loadingStart > 2000) {
      skipBtn.classList.add('visible');
    }

    if (progress >= 100) {
      clearInterval(loadingInterval);
      hideLoading();
    }
  }, 100);
}

function skipLoading() {
  clearInterval(loadingInterval);
  hideLoading();
}

function hideLoading() {
  document.getElementById('loadingOverlay').classList.add('hidden');
  checkUsername();
  initFirebase();
  
}

// ========== USERNAME SYSTEM ==========
function containsBadWord(text) {
  if (!text) return false;
  const lower = text.toLowerCase();
  return BLOCKED_WORDS.some(word => lower.includes(word.toLowerCase()));
}

function checkUsername() {
  const username = localStorage.getItem('username');
  if (!username) {
    document.getElementById('usernameModal').classList.add('active');
  } else {
    document.getElementById('settingsUsername').value = username;
    applySpecialUsernameStyle(username);
    updateChangesRemaining();
  }
}

function saveUsername() {
  const input = document.getElementById('usernameInput');
  const error = document.getElementById('usernameError');
  const username = input.value.trim();
  const lowerName = username.toLowerCase();

  if (lowerName === 'sunibun') {
    error.textContent = 'This username is reserved';
    input.classList.add('invalid');
    return;
  } else {
    input.classList.remove('invalid');
  }

  if (username.length < 3) {
    error.textContent = 'Username must be at least 3 characters';
    return;
  }

  if (containsBadWord(username)) {
    error.textContent = 'Username contains inappropriate words';
    return;
  }

  if (TAKEN_USERNAMES.includes(lowerName)) {
    error.textContent = 'Username already taken';
    return;
  }

  localStorage.setItem('username', username);
  localStorage.setItem('usernameChanges', '4');
  document.getElementById('usernameModal').classList.remove('active');
  document.getElementById('settingsUsername').value = username;
  applySpecialUsernameStyle(username);
  updateChangesRemaining();
}

function changeUsername() {
  const input = document.getElementById('settingsUsername');
  const changes = parseInt(localStorage.getItem('usernameChanges') || '4');
  const username = input.value.trim();
  const lowerName = username.toLowerCase();

  if (lowerName === 'sunibun') {
    alert('why r u trying be sunibun bitchboi');
    return;
  }

  if (changes <= 0) {
    alert('No username changes remaining');
    return;
  }

  if (username.length < 3) {
    alert('Username must be at least 3 characters');
    return;
  }

  if (containsBadWord(username)) {
    alert('Username contains inappropriate words');
    return;
  }

  if (TAKEN_USERNAMES.includes(lowerName)) {
    alert('Username already taken');
    return;
  }

  localStorage.setItem('username', username);
  localStorage.setItem('usernameChanges', (changes - 1).toString());
  applySpecialUsernameStyle(username);
  updateChangesRemaining();
  alert('Username changed successfully!');
}

function updateChangesRemaining() {
  const changes = parseInt(localStorage.getItem('usernameChanges') || '4');
  document.getElementById('changesRemaining').textContent = changes;
  document.getElementById('usernameChangeBtn').disabled = changes <= 0;
}

// ===== ADMIN CHECK =====
function isAdmin() {
  const username = localStorage.getItem('username')?.toLowerCase();
  return username === 'sunibun';
}


// ========== SPECIAL SUNIBUN STYLE ==========
function applySpecialUsernameStyle(username) {
  const input = document.getElementById('settingsUsername');
  if (username.toLowerCase() === 'sunibun') {
    input.style.color = 'yellow';
    input.style.fontWeight = 'bold';
    input.style.transition = 'all 0.5s ease';
    input.style.textShadow = '0 0 10px yellow, 0 0 20px orange';
    input.classList.add('animate-glow');
  } else {
    input.style.color = '';
    input.style.fontWeight = '';
    input.style.textShadow = '';
    input.classList.remove('animate-glow');
  }
}

// ========== INIT ==========
checkUsername();
    
    // ========== FIREBASE INIT ==========
 function initFirebase() {
  // ===== PRESENCE TRACKING =====
  const presenceRef = database.ref(`presence/${sessionId}`);
  presenceRef.set({ online: true, lastSeen: Date.now() });
  presenceRef.onDisconnect().remove();

  setInterval(() => {
    presenceRef.set({ online: true, lastSeen: Date.now() });
  }, 30000);

  database.ref('presence').on('value', snap => {
    const count = snap.val() ? Object.keys(snap.val()).length : 0;
    document.getElementById('onlineCount').textContent = count;
    document.getElementById('chatOnlineCount').textContent = count;
  });

  // ===== CHAT MESSAGES =====
  database.ref('globalChat/messages')
    .orderByChild('timestamp')
    .limitToLast(50)
    .on('value', snap => {
      renderMessages(snap.val() || {});
    });

  // ===== CONFIG (shutdown, removed games, announcements) =====
  database.ref('config').on('value', snap => {
    const config = snap.val() || {};
    window.config = config;

    // --- SHUTDOWN OVERLAY ---
    let shutdownOverlay = document.getElementById('shutdownOverlay');
    if (config.shutdown) {
      if (!shutdownOverlay) {
        shutdownOverlay = document.createElement('div');
        shutdownOverlay.id = 'shutdownOverlay';
        shutdownOverlay.style = `
          position:fixed;
          top:0; left:0; width:100%; height:100%;
          background:#111; color:#fff; display:flex; flex-direction:column;
          justify-content:center; align-items:center; text-align:center; z-index:9999;
        `;
        shutdownOverlay.innerHTML = `
          <h1 style="font-size:42px;margin-bottom:16px;">Site Offline</h1>
          <p style="font-size:16px;color:#aaa;">${config.shutdownMessage || 'The site is currently offline.'}</p>
          <p style="font-size:13px;color:#888;">${config.shutdownReason || ''}</p>
        `;
        document.body.appendChild(shutdownOverlay);
      }
    } else {
      shutdownOverlay?.remove();
    }

    // --- REMOVED GAMES ---
    if (config.games) {
      removedGames = Object.keys(config.games)
        .filter(id => !config.games[id])
        .map(Number);
    }
  });

  // ===== ANNOUNCEMENTS =====
  database.ref('config/announcement').on('value', snap => {
    const announcement = snap.val();
    const shownKey = `announcement_${announcement}`;
    if (announcement && !sessionStorage.getItem(shownKey)) {
      showAnnouncement(announcement);
      sessionStorage.setItem(shownKey, 'true');
      setTimeout(() => dismissAnnouncement(), 20000);
    }
  });

  // ===== RENDER GAMES INITIALLY =====
  renderGames();
}



    
let canSend = true; // client-side cooldown flag
const cooldown = 3000; // 10 seconds

function sendMessage() {
  const input = document.getElementById('chatInput');
  const notice = document.getElementById('moderationNotice');
  const text = input.value.trim();
  const username = localStorage.getItem('username');

  if (!text || !username) return;

// ===== CHECK IF USER IS MUTED =====
const mutedUsers =
  window.config && Array.isArray(window.config.mutedUsers)
    ? window.config.mutedUsers
    : [];

if (mutedUsers.includes(username)) {
  notice.textContent = 'looks like you were acting bad, you have been muted by a moderator';
  notice.classList.add('visible');
  setTimeout(() => notice.classList.remove('visible'), 3000);
  return;
}


  // ===== PROFANITY FILTER =====
  if (containsBadWord(text)) {
    notice.textContent = '‚ö†Ô∏è Message blocked: Contains inappropriate content';
    notice.classList.add('visible');
    setTimeout(() => notice.classList.remove('visible'), 3000);
    return;
  }

  // ===== COOLDOWN CHECK =====
  if (!canSend) {
    notice.textContent = '‚è≥ Please wait 10 seconds before sending another message';
    notice.classList.add('visible');
    return;
  }

  // ===== SEND MESSAGE TO FIREBASE =====
  database.ref('globalChat/messages').push({
    text,
    user: username,
    timestamp: Date.now()
  });

  input.value = '';
  notice.textContent = '';
  canSend = false;

  // ===== START COOLDOWN TIMER =====
  let timeLeft = cooldown / 1000;
  notice.textContent = `‚è≥ Please wait ${timeLeft} seconds before sending another message`;
  notice.classList.add('visible');

  const cooldownInterval = setInterval(() => {
    timeLeft--;
    if (timeLeft > 0) {
      notice.textContent = `‚è≥ Please wait ${timeLeft} seconds before sending another message`;
    } else {
      canSend = true;
      notice.textContent = '';
      notice.classList.remove('visible');
      clearInterval(cooldownInterval);
    }
  }, 1000);
}




// ===== escapeHtml =====
function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

const USERNAME_RESET_FLAG = 'usernameResetDone';

// ===== FORCE USERNAME RESET (ONCE) =====
function resetUsername() {
  const storedUser = localStorage.getItem('username') || '';
  const currentUser = storedUser.toLowerCase();

  // Already completed
  if (localStorage.getItem(USERNAME_RESET_FLAG) === 'true') {
    return storedUser;
  }

  // Skip reserved users
  if (typeof TAKEN_USERNAMES !== 'undefined' &&
      TAKEN_USERNAMES.includes(currentUser)) {
    localStorage.setItem(USERNAME_RESET_FLAG, 'true');
    return currentUser;
  }

  let newUser = '';

  while (!newUser) {
    newUser = prompt(
      '‚ö†Ô∏è You must choose a username before using chat.\n\nEnter a new username:'
    );

    if (!newUser) continue;
    newUser = newUser.trim();
    const lower = newUser.toLowerCase();

    // Blocked words
    if (BLOCKED_WORDS.some(word => lower.includes(word))) {
      alert('‚ö†Ô∏è This username contains blocked words.');
      newUser = '';
      continue;
    }

    // Taken usernames (linked to config)
    if (typeof TAKEN_USERNAMES !== 'undefined' &&
        TAKEN_USERNAMES.includes(lower)) {
      alert('‚ö†Ô∏è This username is already taken.');
      newUser = '';
      continue;
    }
  }

  localStorage.setItem('username', newUser);
  localStorage.setItem(USERNAME_RESET_FLAG, 'true');

  // ---- PRIVATE LOCAL MESSAGE ----
  const chatContainer = document.getElementById('chatMessages');
  if (chatContainer) {
    const privateMsg = document.createElement('div');
    privateMsg.className = 'chat-message own';
    privateMsg.style.opacity = '0.75';
    privateMsg.style.fontStyle = 'italic';
    privateMsg.style.color = '#4da6ff';
    privateMsg.style.padding = '10px';
    privateMsg.style.marginBottom = '8px';
    privateMsg.textContent =
      `‚úÖ You‚Äôve reset your username. Your new username is "${newUser}"`;

    chatContainer.appendChild(privateMsg);
    chatContainer.scrollTop = chatContainer.scrollHeight;
  }

  return newUser;
}

// ===== RUN ONLY ON CHAT PAGE =====
window.addEventListener('DOMContentLoaded', () => {
  if (document.getElementById('chatMessages')) {
    resetUsername();
  }
});









// ===== SAFE renderMessages (special users highlighted, only SPECIAL_ADMINS can mute/delete) =====
function renderMessages(messages) {
  const container = document.getElementById('chatMessages');
  const currentUser = (localStorage.getItem('username') || '').toLowerCase();
  container.innerHTML = '';

  const mutedUsers = (window.config && Array.isArray(window.config.mutedUsers)) ? window.config.mutedUsers : [];

  const SPECIAL_USER_GIFS = {
    'sunibun': 'https://i.pinimg.com/originals/31/e1/03/31e1037b1b30c313806263929812df66.gif',
    'mcthug': 'https://i.pinimg.com/originals/b9/dd/d5/b9ddd52e623f5b9960f89c98b7ae1d73.gif',
    'normi': 'https://i.pinimg.com/originals/78/e6/77/78e677384a1b99ad26af270b756dde17.gif',
    'enzo': 'https://i.pinimg.com/1200x/2a/a7/93/2aa79321dd398841372ebbb077bef128.jpg',
    'asthma': 'https://cdn.pfps.gg/banners/2526-shooting-stars.gif',
    'viper': 'https://i.pinimg.com/1200x/92/6a/67/926a672cf499c0c1168d2689d7e8f310.jpg'
  };

  const SPECIAL_USER_ROLES = {
    'sunibun': { role: 'Owner', color: '#1E90FF' },       // blue
    'mcthug': { role: 'Co-Owner', color: '#a62be3' },     // cyan
    'normi': { role: 'Developer', color: '#7d7d7d' },     // green
    'enzo': { role: 'Developer', color: '#7d7d7d' },      // orange
    'asthma': { role: 'Moderator', color: '#2dcbeb' },     // light blue
    'viper': { role: 'Moderator', color: '#2dcbeb' }      // light blue
  };

  Object.entries(messages || {})
    .sort((a, b) => (a[1]?.timestamp || 0) - (b[1]?.timestamp || 0))
    .forEach(([id, msg]) => {
      if (!msg || !msg.user || !msg.text) return;

      const div = document.createElement('div');
      div.className = `chat-message${msg.user.toLowerCase() === currentUser ? ' own' : ''}`;

      const userLower = msg.user.toLowerCase();

      // Special user GIF background
      if (SPECIAL_USERS.includes(userLower) && SPECIAL_USER_GIFS[userLower]) {
        div.style.backgroundImage = `linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('${SPECIAL_USER_GIFS[userLower]}')`;
        div.style.backgroundSize = 'cover';
        div.style.backgroundRepeat = 'no-repeat';
        div.style.backgroundPosition = 'center';
        div.style.boxShadow = '0 0 10px rgba(0,0,0,0.5)';
      } else {
        div.style.backgroundColor = 'rgba(0,0,0,0.1)';
        div.style.boxShadow = '0 2px 6px rgba(0,0,0,0.15)';
      }

      div.style.padding = '12px';
      div.style.borderRadius = '8px';
      div.style.marginBottom = '10px';
      div.style.display = 'flex';
      div.style.flexDirection = 'column';
      div.style.minHeight = '80px';

      // Username + role beside it
      const userDiv = document.createElement('div');
      userDiv.className = 'chat-message-user';
      userDiv.style.display = 'flex';
      userDiv.style.alignItems = 'center';
      userDiv.style.justifyContent = 'center';
      userDiv.style.marginBottom = '6px';

      // Username
      const nameSpan = document.createElement('span');
      nameSpan.textContent = msg.user;
      if (SPECIAL_USERS.includes(userLower)) {
        nameSpan.style.color = '#fff';
        nameSpan.style.textShadow = '0 0 4px #000, 0 0 8px #000';
      } else {
        nameSpan.style.color = '#fff'; // normal users white
      }
      nameSpan.style.fontWeight = 'bold';
      userDiv.appendChild(nameSpan);

      // Role beside username
      const roleSpan = document.createElement('span');
      const roleData = SPECIAL_USER_ROLES[userLower];
      roleSpan.textContent = roleData ? roleData.role : 'Member';
      roleSpan.style.fontSize = '12px';
      roleSpan.style.fontWeight = 'bold';
      roleSpan.style.marginLeft = '8px';
      roleSpan.style.padding = '2px 6px';
      roleSpan.style.borderRadius = '4px';
      roleSpan.style.backgroundColor = roleData ? roleData.color : 'rgba(255,255,255,0.2)';
      roleSpan.style.color = '#fff';
      userDiv.appendChild(roleSpan);

      div.appendChild(userDiv);

      // Message text
      const textDiv = document.createElement('div');
      textDiv.className = 'chat-message-text';
      let messageText = escapeHtml(msg.text);

      if (mutedUsers.includes(msg.user)) {
        messageText = `[Muted] ${messageText}`;
        div.style.opacity = '0.5';
      }

      textDiv.innerHTML = messageText;
      div.appendChild(textDiv);

      // Buttons for SPECIAL_ADMINS
      if (SPECIAL_ADMINS.includes(currentUser)) {
        const deleteBtn = document.createElement('button');
        deleteBtn.textContent = 'Delete';
        deleteBtn.style.marginLeft = '8px';
        deleteBtn.onclick = () => database.ref(`globalChat/messages/${id}`).remove();
        textDiv.appendChild(deleteBtn);

        const muteBtn = document.createElement('button');
        const updateMuteButton = () => {
          muteBtn.textContent = mutedUsers.includes(msg.user) ? 'Unmute' : 'Mute';
        };
        updateMuteButton();
        muteBtn.onclick = () => {
          const isMuted = mutedUsers.includes(msg.user);
          if (isMuted) mutedUsers.splice(mutedUsers.indexOf(msg.user), 1);
          else mutedUsers.push(msg.user);
          database.ref('config/mutedUsers').set(mutedUsers);
          updateMuteButton();
        };
        muteBtn.style.marginLeft = '4px';
        textDiv.appendChild(muteBtn);
      }

      container.appendChild(div);
    });

  container.scrollTop = container.scrollHeight;
}




















    
    // ========== ANNOUNCEMENTS ==========
    function showAnnouncement(text) {
      document.getElementById('announcementBody').textContent = text;
      document.getElementById('announcementPanel').classList.remove('hidden');
    }
    
    function dismissAnnouncement() {
      document.getElementById('announcementPanel').classList.add('hidden');
    }
    
    // ========== NAVIGATION ==========
    function goToPage(page) {
      document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
      document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
      document.getElementById(`page-${page}`).classList.add('active');
      document.querySelector(`.nav-link[data-page="${page}"]`)?.classList.add('active');
      
      if (page === 'games') renderGames();
    }
    
    // ========== GAMES ==========
    function renderGames() {
      const popularGrid = document.getElementById('popularGamesGrid');
      const allGrid = document.getElementById('gamesGrid');
      const searchQuery = document.getElementById('gamesSearch')?.value || '';
      
      // Popular games
      popularGrid.innerHTML = '';
      POPULAR_GAMES.forEach(id => {
        if (removedGames.includes(id)) return;
        if (searchQuery && !id.toString().includes(searchQuery)) return;
        popularGrid.appendChild(createGameCard(id));
      });
      
      // All games
      allGrid.innerHTML = '';
      for (let i = 0; i < Math.min(TOTAL_GAMES, 542); i++) {
        if (removedGames.includes(i)) continue;
        if (searchQuery && !i.toString().includes(searchQuery)) continue;
        allGrid.appendChild(createGameCard(i));
      }
    }
    
    function createGameCard(id) {
      const customGame = CUSTOM_GAMES[id];
      const imageUrl = customGame?.image || `https://cdn.jsdelivr.net/gh/gn-math/covers@main/${id}.png`;
      
      const card = document.createElement('div');
      card.className = 'game-card';
      card.onclick = () => openGame(id);
      card.innerHTML = `
        <img src="${imageUrl}" alt="Game ${id}" onerror="this.style.display='none'">
        <span class="game-id">${id}</span>
      `;
      return card;
    }
    
    function filterGames() {
      renderGames();
    }
    
    function openGame(id) {
      currentGameId = id;
      const customGame = CUSTOM_GAMES[id];
      const url = customGame?.url || `https://question.sdao.me/iframe/${id}.html`;
      
      document.getElementById('gameTitle').textContent = `Game ${id}`;
      document.getElementById('gameFrame').src = '';
      document.getElementById('gamePlayer').classList.add('active');
      document.getElementById('gameLoading').classList.remove('hidden');
      
      
      // Loading with device adaptation
      const bar = document.getElementById('gameLoadingBar');
      const skipBtn = document.getElementById('gameSkipBtn');
      let progress = 0;
      const deviceSpeed = navigator.hardwareConcurrency || 4;
      const loadTime = Math.max(10000, 15000 - (deviceSpeed * 500));
      const start = Date.now();
      
      const interval = setInterval(() => {
        progress += 100 / (loadTime / 100);
        bar.style.width = Math.min(progress, 100) + '%';
        
        if (Date.now() - start > 2000) {
          skipBtn.classList.add('visible');
        }
        
        if (progress >= 100) {
          clearInterval(interval);
          document.getElementById('gameLoading').classList.add('hidden');
          document.getElementById('gameFrame').src = url;
        }
      }, 100);
      
      window.currentGameInterval = interval;
    }
    
    function skipGameLoading() {
      clearInterval(window.currentGameInterval);
      document.getElementById('gameLoading').classList.add('hidden');
      const customGame = CUSTOM_GAMES[currentGameId];
      const url = customGame?.url || `https://question.sdao.me/iframe/${currentGameId}.html`;
      document.getElementById('gameFrame').src = url;
    }
    
    function closeGame() {
      document.getElementById('gamePlayer').classList.remove('active');
      document.getElementById('gameFrame').src = '';
      clearInterval(window.currentGameInterval);
    }
    
    function reloadGame() {
      const frame = document.getElementById('gameFrame');
      frame.src = frame.src;
    }
    
    function fullscreenGame() {
      const frame = document.getElementById('gameFrame');
      if (frame.requestFullscreen) frame.requestFullscreen();
      else if (frame.webkitRequestFullscreen) frame.webkitRequestFullscreen();
    }
    
 
    
    // ========== SETTINGS ==========
    function setTheme(theme) {
      document.body.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
      document.querySelectorAll('.theme-option').forEach(o => o.classList.remove('active'));
      document.querySelector(`.theme-option.${theme}`).classList.add('active');
    }
    
    function setCloak(title, icon) {
      document.title = title;
      const link = document.querySelector("link[rel='icon']") || document.createElement('link');
      link.rel = 'icon';
      link.href = icon.startsWith('http') ? icon : `data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>${icon}</text></svg>`;
      document.head.appendChild(link);
      localStorage.setItem('cloak', JSON.stringify({ title, icon }));
      document.querySelectorAll('.cloak-option').forEach(o => o.classList.remove('active'));
      event.target.classList.add('active');
    }
    
    function toggleAnimations() {
      const toggle = document.getElementById('animationsToggle');
      toggle.classList.toggle('active');
      localStorage.setItem('animations', toggle.classList.contains('active'));
    }
    
    function toggleEffects() {
      const toggle = document.getElementById('effectsToggle');
      toggle.classList.toggle('active');
      localStorage.setItem('effects', toggle.classList.contains('active'));
    }
    
// ========== ADMIN PANEL ==========
document.addEventListener('keydown', e => {
  if (e.ctrlKey && e.altKey && e.key === '5') {
    e.preventDefault();

    // Check your Firebase variable for shutdown status
    // Example: assume you have siteStatus from Firebase like { shutdown: true/false }
    if (window.siteStatus?.shutdown) {
      // Website is shutdown ‚Üí show admin panel immediately
      document.getElementById('adminPasswordModal').classList.remove('hidden');
    } else {
      // Website is up ‚Üí normal admin behavior
      if (adminTriggerActive) { // keep your existing trigger
        document.getElementById('adminPasswordModal').classList.remove('hidden');
      }
      // Add other "website up" admin logic here if needed
    }
  }
});


// Admin password verification
function verifyAdminPassword() {
  const input = document.getElementById('adminPasswordInput');
  const error = document.getElementById('adminError');

  if (input.value === ADMIN_PASSWORD) {
    document.getElementById('adminPasswordModal').classList.add('hidden');
    document.getElementById('adminPanel').classList.add('active');
    input.value = '';
    loadAdminData();
  } else {
    error.textContent = 'Invalid password';
  }
}

// Load all admin data from Firebase
function loadAdminData() {
  database.ref('config').once('value', snap => {
    const config = snap.val() || {};

    // Announcements
    document.getElementById('adminAnnouncement').value = config.announcement || '';

    // Shutdown
    document.getElementById('shutdownMessage').value = config.shutdownMessage || '';
    document.getElementById('shutdownReason').value = config.shutdownReason || '';
    if (config.shutdown) document.getElementById('shutdownToggle').classList.add('active');

    // Chat settings
    document.getElementById('chatEnabledToggle').checked = config.chatEnabled ?? true;
    document.getElementById('chatLockMessageInput').value = config.chatLockMessage || 'Global chat is temporarily disabled.';
    document.getElementById('mutedUsersInput').value = (config.mutedUsers || []).join(',');
  });
}

// Close admin panel
function closeAdmin() {
  document.getElementById('adminPanel').classList.remove('active');
}

// ===== ANNOUNCEMENTS =====
function publishAnnouncement() {
  const text = document.getElementById('adminAnnouncement').value.trim();
  database.ref('config/announcement').set(text);
  alert('Announcement published!');
}

function clearAnnouncement() {
  database.ref('config/announcement').set('');
  document.getElementById('adminAnnouncement').value = '';
  alert('Announcement cleared!');
}

// ===== SHUTDOWN =====
function toggleShutdown() {
  document.getElementById('shutdownToggle').classList.toggle('active');
}

function saveShutdownSettings() {
  const shutdown = document.getElementById('shutdownToggle').classList.contains('active');
  const message = document.getElementById('shutdownMessage').value.trim();
  const reason = document.getElementById('shutdownReason').value.trim();

  database.ref('config').update({ shutdown, shutdownMessage: message, shutdownReason: reason });
  alert('Shutdown settings saved!');
}

// ===== REMOVE GAMES =====
function removeGames() {
  const ids = document.getElementById('removeGameIds').value
    .split(',')
    .map(s => parseInt(s.trim()))
    .filter(n => !isNaN(n));

  const games = {};
  ids.forEach(id => { games[id] = false; });
  database.ref('config/games').update(games);
  alert('Games removed!');
}

// ===== CHAT SETTINGS =====
function saveChatSettings() {
  const chatEnabled = document.getElementById('chatEnabledToggle').checked;
  const chatLockMessage = document.getElementById('chatLockMessageInput').value.trim();
  const mutedUsers = document.getElementById('mutedUsersInput').value
    .split(',')
    .map(u => u.trim())
    .filter(u => u.length > 0);

  database.ref('config').update({
    chatEnabled,
    chatLockMessage,
    mutedUsers
  });

  alert('Chat settings saved!');
}




    
    // ========== INIT ==========
    window.onload = () => {
      startLoading();
      
      // Load saved settings
      const savedTheme = localStorage.getItem('theme') || 'dark';
      setTheme(savedTheme);
      
      const savedCloak = JSON.parse(localStorage.getItem('cloak') || 'null');
      if (savedCloak) {
        document.title = savedCloak.title;
        const link = document.querySelector("link[rel='icon']") || document.createElement('link');
        link.rel = 'icon';
        link.href = savedCloak.icon.startsWith('http') ? savedCloak.icon : `data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>${savedCloak.icon}</text></svg>`;
        document.head.appendChild(link);
      }
    };
